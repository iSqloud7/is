@model LibraryApp.Domain.Models.Domain.Book

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Add selected book to your shopping cart!</h3>

<div class="row mt-4">
	<div class="col-md-4 m-auto">
		<form method="post" asp-action="AddBookToCart">
			<input type="hidden" asp-for="@Model.ID" name="BookID" />
			<div class="form-group">
				<label asp-for="@Model.Title"></label>
				<input disabled asp-for="@Model.Title" class="form-control" />
			</div>
			<div class="form-group mt-3">
				<label>Quantity</label>
				<input type="number" name="Quantity" class="form-control" min="1" value="1" />
			</div>
			<input type="submit" value="Save!" class="btn btn-success mt-3 col-12" />
		</form>
	</div>
</div>